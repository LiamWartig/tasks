import React, {Component} from 'react';


export default
class App extends Component {

  constructor(props){
    super(props);
    this.state = {
      text: "",
      descriptions: []
    }
  }

  inputChange = (e) => {
    this.setState({
      text: e.target.value
    })
  }

  btnftn = () => { 
    let arr = this.state.descriptions;
    arr.push(this.state.text);
    this.setState({
      descriptions: arr,
      text:""
    })
  }

  render(){
    return( 
                  // put html doc here, calling the individual components

      <div>
        <input type = "text" onChange={this.inputChange} value = {this.state.text}/>
        <button type= "submit" onClick = {this.btnftn}>AddToList</button>
        {this.state.descriptions.map((description,i) => <li key={"task"+i}><div className="item">{description}</div></li>)}
        </div>
    )
  }
}








